{
  "manifest_version": 2,
  "name": "Skipper",
  "version": "1.0",
  "description": "Automagically skips Netflix intros",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["skippers/netflix_skipper.js"]
    },
    {
      "matches": ["*://*.primevideo.com/*"],
      "js": ["skippers/prime_skipper.js"]
    }
  ]
}